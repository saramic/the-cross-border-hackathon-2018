<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Postcard Holidays</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link"><%= link_to "Plan a NEW Trip", page_path('itenerary/find_my_holiday'), class: [:'nav-link'] %></a>
      </li>
    </ul>
  </div>
</nav>

<div class="container" style="margin-top: 30px;">
  <div class="container-fluid">
    <div class="col-md-6 offset-md-3">

      <h2 class="text-center">Find my Holiday</h2>

      <div class="col-md-12">
        <div class="row">

          <div class="row">
            <% @images.each do |image| %>
              <div class="col-md-4">
                <%= image_tag image, height: '210px' %>
              </div>
            <% end %>
          </div>
        </div>

        <br>

        <div class="row">
          <div class="btn-group" style="display: block;width: 100%;">
            <%= link_to "Go!", page_path('itenerary/extras'), class: 'btn btn-large btn-primary btn-block' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>