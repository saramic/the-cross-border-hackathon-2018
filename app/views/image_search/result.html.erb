<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <header class="masthead">
    <div class="inner">
      <nav class="nav nav-masthead justify-content-center">
        <%= link_to "Home", root_path, class: [:'nav-link'] %>
        <%= link_to "1", page_path('one'), class: [:'nav-link'] %>
        <%= link_to "2", page_path('two'), class: [:'nav-link'] %>
        <%= link_to "3", page_path('three'), class: [:'nav-link'] %>
        <%= link_to "Demo", image_search_index_path, class: [:'nav-link', :active] %>
        <%= link_to "Value", page_path('value'), class: [:'nav-link'] %>
        <%= link_to "Thanks", page_path('value'), class: [:'nav-link'] %>
        <%= link_to "End", page_path('value'), class: [:'nav-link'] %>
      </nav>
    </div>
  </header>

  <div class="container" style="margin-top: 30px;">
    <div class="container-fluid">
      <div class="col-md-8 offset-md-2" style="border: 1px solid #000;height: 700px;padding: 40px;">
        <h2 class="text-center">Find my Holiday </h2>
        <div class="col-md-12">
          <p><i class="fa fa fa-arrow-left"><%= link_to "Back", image_search_index_path, class: 'back-text' %></i></p>
        </div>

        <div class="col-md-12">
          <div class="row">
            <% @images.each do |image| %>
              <div class="col-md-6">
                <%= image_tag image, height: '100px' %>
              </div>
            <% end %>
          </div>

          <br>

          <div class="row">
            <div class="btn-group" style="display: block;width: 100%;">
              <%= link_to "Go!", page_path('itenerary/extras'), class: 'btn btn-large btn-primary btn-block' %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .back-text {
    color: #000;
  }
</style>